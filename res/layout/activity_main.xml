<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.xiangbalao.androidfontdome.MainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="默认字体"
        android:textColor="@drawable/fonts_style" />

    <org.xiangbalao.androidfontdome.StyledTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="自定义字体" />

    <org.xiangbalao.androidfontdome.IconTextView
        android:id="@+id/myicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20px"
        android:gravity="center_horizontal"
        android:text="\ue91b"
        android:textColor="@drawable/fonts_style"
        android:textSize="50sp" />

    <org.xiangbalao.androidfontdome.IconTextView
        android:id="@+id/myicon2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20px"
        android:gravity="center_horizontal"
        android:text="\uea94"
        android:textColor="@drawable/fonts_style2"
        android:textSize="50sp" />

    <org.xiangbalao.androidfontdome.IconTextView
        android:id="@+id/myicon3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20px"
        android:gravity="center_horizontal"
        android:text="\uea95"
        android:textColor="@drawable/fonts_style3"
        android:textSize="50sp" />

    <org.xiangbalao.androidfontdome.IconTextView
        android:id="@+id/myicon4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20px"
        android:gravity="center_horizontal"
        android:text="\ueac1"
        android:textColor="@drawable/fonts_style4"
        android:textSize="50sp" />

</LinearLayout>